{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es2015", "esnext"],
		"declaration": true,
		"rootDir": "./src",
		"outDir": "./lib",
		"strict": true,
		"esModuleInterop": true,
		"downlevelIteration": true
	},
	"include": ["src", "__tests__"],
	"exclude": ["node_modules", "lib"]
}
